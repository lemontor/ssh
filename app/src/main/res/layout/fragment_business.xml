<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F2F2F2"
    >

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">


    <ImageView
        android:id="@+id/iv_money"
        android:layout_width="@dimen/dp_217"
        android:layout_height="@dimen/dp_191"
        android:src="@mipmap/icon_money"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/layout_title"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/tv_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_000000"
        android:text="@string/busi_title"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_below="@+id/iv_money"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"

        />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_30"
        android:textColor="@color/color_000000"
        android:text="￥120.00"
        android:paddingTop="@dimen/dp_12"
        android:layout_below="@+id/tv_notify"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/dp_37"
        />

    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@android:color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="提现金额"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp_14"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_20"/>

        <EditText
            android:id="@+id/edt_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="可提现金额100.00"
            android:background="@null"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_000000"
            android:maxLines="1">
        </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/tv_login_last"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginRight="@dimen/dp_47"
        android:background="@drawable/bg_click_state"
        android:gravity="center"
        android:text="@string/busi_get"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_40"
        android:textSize="@dimen/sp_14" />

</LinearLayout>