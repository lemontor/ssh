<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <include
        layout="@layout/layout_main_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择性别"
        android:textSize="@dimen/sp_30"
        android:textColor="@color/color_000000"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose gender"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/sp_13"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/iv_pic_women"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_145"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/icon_women"/>

    <ImageView
        android:id="@+id/iv_pic_man"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_145"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/icon_man"/>

</LinearLayout>