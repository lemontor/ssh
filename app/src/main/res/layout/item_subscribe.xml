<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_EAEAEA">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:background="@android:color/white"
        android:elevation="@dimen/dp_10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_17"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_17">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_9"
                android:text="1990-05-12"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_12" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/tv_date"
                android:background="@color/color_F2F2F2" />

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_56"
                android:layout_below="@id/line"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginBottom="@dimen/dp_12"
                />

            <TextView
                android:id="@+id/tv_title_notify"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_56"
                android:layout_below="@id/line"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginBottom="@dimen/dp_12"
                android:maxLength="10"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_000000"
                android:visibility="gone"
                android:text=""
                />


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_head"
                android:layout_toRightOf="@id/iv_head"
                android:paddingLeft="@dimen/dp_16"
                android:text="aaaa"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toRightOf="@id/iv_head"
                android:background="@drawable/bg_level_border"
                android:text="高级鉴定师"
                android:textColor="@color/color_2ED0FF"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_sub_time"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_51"
                android:layout_below="@id/line"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_13"
                android:background="@drawable/bg_sub_time_border"
                android:gravity="center"
                android:text="预约时间\n"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_12" />

            <View
                android:id="@+id/line_b"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/iv_head"
                android:background="@color/color_F2F2F2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_below="@+id/line_b"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sub_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/cancel_sub"
                    android:textColor="@color/color_ff2020"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:id="@+id/line_c"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/iv_head"
                    android:background="@color/color_F2F2F2" />

                <TextView
                    android:id="@+id/tv_consult"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/consulter"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_9"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
