<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_247"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_3"
    android:background="@color/color_ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_ffffff"
        android:paddingTop="@dimen/dp_32"
        android:paddingBottom="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_106"
            android:gravity="center"
            android:text="如您想售卖该物件\n请点击下方确定！" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="@dimen/dp_146"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_click_state_login"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            android:text="返回首页"
            android:textColor="#4FCBFF"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>
</android.support.v7.widget.CardView>
