<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_47"
        android:paddingRight="@dimen/dp_47">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/dp_12"
                android:text="登录"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/line_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@drawable/bg_line_check" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/dp_12"
                android:text="注册"
                android:textColor="@color/color_CACACA"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/line_reg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@drawable/bg_line_uncheck" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_47"
        android:paddingTop="@dimen/dp_50"
        android:paddingRight="@dimen/dp_47"
        >

        <EditText
            android:id="@+id/edt_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_18"
            android:background="@null"
            android:hint="@string/login_edt_account"
            android:maxLines="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_CACACA"
            android:textCursorDrawable="@drawable/bg_edt_cursor"
            android:drawableLeft="@mipmap/icon_name"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_14"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_36"
            android:background="@color/color_EAEAEA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_18"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/login_edt_pwt"
                android:maxLines="1"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_000000"
                android:textColorHint="@color/color_CACACA"
                android:textCursorDrawable="@drawable/bg_edt_cursor"
                android:drawableLeft="@mipmap/icon_pw"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_14"/>

            <ImageView
                android:id="@+id/iv_display"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/icon_pw_undisplay"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@color/color_EAEAEA" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_47"
        android:paddingTop="@dimen/dp_50"
        android:paddingRight="@dimen/dp_47"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_18"
                android:background="@null"
                android:text="@string/login_check_phone"
                android:drawableLeft="@mipmap/icon_phone"
                android:maxLines="1"
                android:drawablePadding="@dimen/dp_17"
                android:textColor="@color/color_000000"
                android:textColorHint="@color/color_000000"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@null"
                android:maxLines="1"
                android:textColor="@color/color_000000"
                android:hint="@string/login_reg_phone"
                android:text=""
                android:textColorHint="@color/color_CACACA"
                android:gravity="right"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_36"
            android:background="@color/color_EAEAEA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:maxLines="1"
                android:hint="@string/login_check_code"
                android:textColor="@color/color_000000"
                android:layout_marginBottom="@dimen/dp_18"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_send_code"
                android:textColor="@color/color_568ECF"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_36"
            android:background="@color/color_EAEAEA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_18"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/login_set_pw"
                android:maxLines="1"
                android:textColor="@color/color_000000"
                android:textColorHint="@color/color_000000"
                android:drawableLeft="@mipmap/icon_pw"
                android:drawablePadding="@dimen/dp_17"/>

            <EditText
                android:id="@+id/edt_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/login_notify_pw"
                android:textColor="@color/color_CACACA"
                android:gravity="right"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@color/color_EAEAEA" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_47"
        android:paddingRight="@dimen/dp_47"
        android:paddingBottom="@dimen/dp_34">

        <TextView
            android:id="@+id/tv_fast_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_tv_fast_login"
            android:textColor="@color/color_2B2B2B"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_forget_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/login_tv_forget_pw"
            android:textColor="@color/color_2B2B2B"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <Button
        android:id="@+id/tv_login_last"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginRight="@dimen/dp_47"
        android:background="@drawable/bg_click_state"
        android:gravity="center"
        android:text="@string/login_tv_login"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp_47"
        android:paddingRight="@dimen/dp_47">


        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_secret"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/icon_logo_qq" />

        <ImageView
            android:id="@+id/iv_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_secret"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/icon_logo_wx" />

        <ImageView
            android:id="@+id/iv_wb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_secret"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_logo_wb" />


        <TextView
            android:id="@+id/tv_secret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_28"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/login_secret"
            android:textColor="@color/color_CACACA"
            android:textSize="@dimen/sp_11" />

    </RelativeLayout>


</LinearLayout>